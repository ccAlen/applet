/* components/footer/footer.wxss */
.bottomNav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  border-top: 1px solid #ddd;
  display: -webkit-box;
  display: box;
  padding: 12rpx 0 5rpx;
  background: #fff;
  z-index: 8;
}

.bottomNav_child {
  -webkit-box-flex: 1;
  box-flex: 1;
  width: 33%;
  text-align: center;
  position: relative;
}
.icon, .navselected .icon {
  display: inline-block;
  width: 42rpx;
  height: 42rpx;
  background-size: 100%;
}

.navtxt {
  font-size: 20rpx;
  color: #333;
  line-height: 26rpx;
}
.sharebtn {
  display: block;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  line-height: 122rpx;
}